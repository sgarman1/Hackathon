<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team name</th>
      <th>Users</th>
      <th>Username</th>
      <th>Project</th>
      <th>Project name</th>
      <th>Task</th>
      <th>Task name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.Users %></td>
        <td><%= team.username %></td>
        <td><%= team.Project %></td>
        <td><%= team.project_name %></td>
        <td><%= team.Task %></td>
        <td><%= team.task_name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

